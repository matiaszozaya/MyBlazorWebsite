@page "/"
@inject IJSRuntime JSRuntime

<PageTitle>Home - Matías Zozaya</PageTitle>

<section class="p-5 d-flex flex-column align-items-center align-items-md-start justify-content-center"
     style="
        height: 100%;
        background-image: linear-gradient(rgba(0, 0, 0, 0.95), rgba(0, 0, 0, 0.5)), url('img/bg-code.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;">

    <h1 class="text-center text-primary font-weight-bold mb-4">Hello! I'm Matías Zozaya</h1>
    <h4 class="text-center text-muted">I'm a Software Developer.</h4>
    <h5 class="text-center text-muted mb-4">I design and develop digital experiences.</h5>
    <div>
        <a href="https://www.linkedin.com/feed/" target="_blank" class="btn btn-primary me-2"><i class="bi bi-linkedin"></i> LinkedIn</a>
        <a href="mailto:matias.m.zozaya@gmail.com" class="btn btn-outline-secondary"><i class="bi bi-envelope-fill"></i> Email</a>
    </div>
</section>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("setMainContentHeight");
            await JSRuntime.InvokeVoidAsync("addResizeListener");
        }
    }
}